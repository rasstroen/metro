<?xml version="1.0" encoding="UTF-8" ?>
<structure>
	<data>
		<layout file="layouts/page.xsl"/>
		<stylesheet path="partials/book"/>
		<stylesheet path="partials/ocr"/>
		<stylesheet path="partials/comment"/>
		<javascript path="partials/ocr"/>
		<role need="30"/>
		<title>Обсуждение книги «{book-title:get:1}»</title>
	</data>
	<blocks>
		<content>
			<module name="comments" action="list" mode="book">
				<param name="book_id" type="get" value="1"/>
				<param name="per_page" type="var" value="30" />
			</module>
			<module name="comments" action="new">
				<param name="book_id" type="get" value="1"/>
				<param name="type" type="var" value="book" />
			</module>
		</content>
		<sidebar>
			<module name="ocr" action="new">
				<param name="id_book" type="get" value="1" />
			</module>
			<module name="ocr" action="list" mode="book" >
				<param name="id_book" type="get" value="1" />
			</module>
		</sidebar>
	</blocks>
</structure>
