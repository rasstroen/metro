<?xml version="1.0" encoding="UTF-8" ?>
<structure>
	<data>
		<layout file="layouts/page.xsl"/>
    <stylesheet path="partials/book"/>
    <stylesheet path="partials/author"/>
		<role need="0"/>
		<title>Книги и авторы по запросу «{get:q}»</title>
	</data>
	<blocks>
		<content>
			<module name="books" action="list" mode="search">
				<param name="per_page" type="var" value="40" />
			</module>
			<module name="authors" action="list" mode="search">
				<param name="paging_parameter_name" type="var" value="p_a" />
				<param name="per_page" type="var" value="40" />
			</module>
			<module name="series" action="list" mode="search">
				<param name="paging_parameter_name" type="var" value="p_s" />
				<param name="per_page" type="var" value="40" />
			</module>
			<module name="magazines" action="list" mode="search">
				<param name="paging_parameter_name" type="var" value="p_m" />
				<param name="per_page" type="var" value="40" />
			</module>
		</content>
		<sidebar>
		</sidebar>
	</blocks>
</structure>
